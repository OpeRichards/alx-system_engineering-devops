#!/usr/bin/env bash
# This script displays "Best School" 10 times with alternate displays

# Initialize a counter
counter=1

# Use a while loop to display "Best School" 10 times
while [ $counter -le 10 ]
do
    # Check if it's the 9th iteration
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi

    # Increment the counter
    ((counter++))
done